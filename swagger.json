{
  "openapi": "3.0.3",
  "info": {
    "title": "Blog Application",
    "description": "This is a sample for learning purpose",
    "contact": {
      "email": "myteam@binar.org"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3015/api/v1"
    }
  ],
  "tags": [
    {
      "name": "blog",
      "description": "Everything about blog"
    }
  ],
  "paths": {
    "/blogs": {
      "get": {
        "tags": [
          "blog"
        ],
        "summary": "List all blogs",
        "description": "Listing all published blog from the server",
        "operationId": "listBlog",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Blog"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Blog": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "example": "title 1"
            },
            "content": {
              "type": "string",
              "example": "content 1"
            }
          }
        }
      }
    }
  }
}